{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": "us-west-2"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{ user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "packer-restaurant-details-server {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./mykey.pub",
      "destination": "/tmp/mykey.pub"
    },
    {
      "type": "shell",
      "scripts": ["boot-scripts/install_software.sh"],
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "scripts": ["boot-scripts/deploy.sh"],
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "inline_shebang": "#!/bin/bash -e",
      "inline": [
        "sleep 10",
        "cd /home/ubuntu/FEC-Restaurant-Info-Module",
        "npm install"
      ],
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "pause_before": "10s"
    }
  ]
}
